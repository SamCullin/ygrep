{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[ygrep] Indexing...' && ygrep index && echo '[ygrep] Done'",
            "timeout": 60
          }
        ]
      }
    ]
  }
}
